{
  "name": "one-way-git-sync",
  "description": "A tool for synchronizing a destination git repository with a source git repository SAFELY.",
  "keywords": [
    "git",
    "sync"
  ],
  "repository": "github:WillBooster/one-way-git-sync",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "bin": "./bin/index.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "rm -Rf dist; node esbuild.js",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "postinstall": "husky install",
    "lint": "eslint --color \"./{src,__tests__,scripts}/**/*.{cjs,js,jsx,mjs,ts,tsx}\"",
    "lint-fix": "yarn lint --fix",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prettify": "prettier --color --write \"**/{.*/,}*.{cjs,css,htm,html,js,json,json5,jsx,md,mjs,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\"",
    "release": "yarn build && semantic-release",
    "start": "node -r esbuild-register src/start.ts",
    "start-prod": "yarn build && yarn one-way-git-sync",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "resolutions": {
    "npm/chalk": "^4.1.2"
  },
  "dependencies": {
    "fs-extra": "10.1.0",
    "micromatch": "4.0.5",
    "simple-git": "3.15.0",
    "winston": "3.8.2",
    "yargs": "17.6.2"
  },
  "devDependencies": {
    "@types/eslint": "8.4.10",
    "@types/fs-extra": "9.0.13",
    "@types/micromatch": "4.0.2",
    "@types/semantic-release": "17.2.4",
    "@types/yargs": "17.0.14",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "@willbooster/eslint-config-ts": "9.2.1",
    "@willbooster/prettier-config": "9.1.1",
    "@willbooster/renovate-config": "9.4.2",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "esbuild": "0.15.15",
    "esbuild-register": "3.4.1",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-sort-class-members": "1.15.2",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "husky": "8.0.2",
    "lint-staged": "13.0.4",
    "pinst": "3.0.0",
    "prettier": "2.8.0",
    "semantic-release": "19.0.5",
    "sort-package-json": "1.57.0",
    "typescript": "4.9.3"
  },
  "packageManager": "yarn@4.0.0-rc.31",
  "engines": {
    "node": ">=14"
  }
}
